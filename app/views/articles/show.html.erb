<h1><%= @article.title %></h1>

<p>
	<%= @article.text %>
</p>
<% @article.comments.each do |com| %>
<hr>
	<div id="comments">
		<p>author:<b>  
			<%=com.author %></b>
		</p> 
		<p>say:
			<%=com.body %>
		</p>
	</div>
<hr>
<% end %>

<p>
<%= form_for ([@article, @article.comments.build]) do |f| %>

<p>
		 
		<%= f.label :author %><br \>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br \>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
		
	</p>


<% end %>
</p>